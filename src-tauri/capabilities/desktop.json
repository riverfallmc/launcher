{
  "identifier": "desktop",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "global-shortcut:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/clients/*"
        }
      ]
    },
    "drpc:default",
    "fs:default",
    "notification:default",
    "updater:default",
    "upload:default",
    "websocket:default"
  ]
}
