{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "serenitymc_launcher",
  "version": "0.3.3",
  "identifier": "ru.serenitymc.launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "серенити",
        "width": 1000,
        "height": 650,
        "decorations": false,
        "resizable": false,
        "center": true,
        "userAgent": "Riverfall Official Launcher/0.3.3"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}